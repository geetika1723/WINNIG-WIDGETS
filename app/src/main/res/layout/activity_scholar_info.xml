<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScholarInfoActivity"
    android:orientation="vertical"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/scholar1"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:padding="10dp"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ITC Grand Bharat, Gurugram"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:background="#c19f7b"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organization:"
                    android:layout_marginTop="10dp"
                    android:textColor="#c19f7b"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Offered by TalentSprint and supported by Google"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18dp"
                    android:id="@+id/organizations"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eligibility: "
                    android:layout_marginTop="10dp"
                    android:textColor="#c19f7b"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Women students currently in their first year of engineering"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18dp"
                    android:justificationMode="inter_word"
                    android:id="@+id/eligibility"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stream  : "
                    android:layout_marginTop="10dp"
                    android:textColor="#c19f7b"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Women students currently in their first year of engineering"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18dp"
                    android:justificationMode="inter_word"
                    android:id="@+id/stream"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grades  : "
                    android:layout_marginTop="10dp"
                    android:textColor="#c19f7b"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Women students currently in their first year of engineering"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18dp"
                    android:justificationMode="inter_word"
                    android:id="@+id/grades"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Applications  : "
                    android:layout_marginTop="10dp"
                    android:textColor="#c19f7b"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Women students currently in their first year of engineering"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18dp"
                    android:justificationMode="inter_word"
                    android:id="@+id/applications"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description  : "
                    android:layout_marginTop="10dp"
                    android:textColor="#c19f7b"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Women students currently in their first year of engineering"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18dp"
                    android:justificationMode="inter_word"
                    android:id="@+id/Description"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Website Link : "
                    android:layout_marginTop="10dp"
                    android:textColor="#c19f7b"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://we.talentsprint.com/#whyWTEF"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18dp"
                    android:justificationMode="inter_word"
                    android:id="@+id/website"/>
                <Button
                    android:id="@+id/btn_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Benifical Details...CLICK >>>>"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/holo_blue_dark" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>